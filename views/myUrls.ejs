<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Urls</title>
    <link rel="stylesheet" href="/CSS/myUrls.css">
</head>
<body>
    <div class="nav-container">
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/stats">Stats</a></li>
                <li><a href="/myUrls">myUrls</a></li>
            </ul>
        </nav>
    <div class="container">
        <h1 class="title">My URLs</h1>
        <div class="table-container">
            <% if(locals.urls && urls.length > 0) { %>
            <table class="urls-table">
                <thead>
                    <tr>
                        <th>S. NO</th>
                        <th>Short ID</th>
                        <th>Redirect URL</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <p class="no-urls">No URLs found. Add some URLs to see them here.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
