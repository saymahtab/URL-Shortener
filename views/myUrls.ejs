<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Urls</title>
    <link rel="stylesheet" href="/CSS/myUrls.css">
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="nav-bar">
          <div class="menu-icon">
              <i class="fas fa-bars"></i>
          </div>
          <div class="logo">
            <a href="/"><img src="/assets/Flink2.png" alt="png" height="60" /></a>
          </div>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/stats">Stats</a></li>
            <li><a href="/myUrls">myUrls</a></li>
          </ul>
          <div class="nav-buttons">
            <a href="/login" class="button-link">Login</a>
            <a href="/signup" class="button-link">Signup</a>
          </div>
        </nav>
      </header>
  
      <div class="side-bar">
          <div class="icon-logo">
              <div class="side-bar-logo">
                  <a href="/"><img src="/assets/Flink2.png" alt="png" height="60" /></a>
              </div>
              <div class="cross-icon">
                  <i class="fas fa-times"></i>
              </div>
          </div>
          <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/stats">Stats</a></li>
              <li><a href="/myUrls">myUrls</a></li>
          </ul>
          <div class="side-bar-buttons">
              <a href="/login" class="button-link">Login</a>
              <a href="/signup" class="button-link">Signup</a>
            </div>
      </div>
      
    <div class="container">
        <h1 class="title">My URLs</h1>
        <div class="table-container">
            <% if(locals.urls && urls.length > 0) { %>
            <table class="urls-table">
                <thead>
                    <tr>
                        <th>S. NO</th>
                        <th>Short ID</th>
                        <th>Redirect URL</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <p class="no-urls">No URLs found. Add some URLs to see them here.</p>
            <% } %>
        </div>
    </div>

    <script src="/JS/script1.js"></script>
</body>
</html>
